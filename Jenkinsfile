                            exit(\$status);
                        "
                    fi
                    
                    TEST_RESULT=$?
                    
                    if [ $TEST_RESULT -eq 0 ]; then
                        echo "âœ… Tests rÃ©ussis"
                    else
                        echo "âŒ Tests Ã©chouÃ©s"
                        exit 1
                    fi
                '''
            }
        }
    }

    post {
        success {
            echo "ðŸŽ‰ PIPELINE RÃ‰USSI !"
            archiveArtifacts artifacts: 'storage/logs/*.log', allowEmptyArchive: true
